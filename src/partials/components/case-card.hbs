{{#if mainPage}}
<a href="" class="{{#if caseClass}}{{caseClass}}{{/if}} case-card" {{#if dataId}}data-id={{dataId}}{{/if}}>
    <div class="case-card__desc">
        <div class="case-card__counter">{{this.counter}}</div>
        <p class="case-card__type">
            {{this.type}}
        </p>
    </div>

    <div class="case-card__picture">
        <div class="case-card__arrow">
            <picture>
                <source type="image/webp" srcset="./img/formats/diagonal-arrow-black.webp" />
                <img class="lazy case-card__arrow-icon" src="./img/formats/diagonal-arrow-black.png" alt="image">
            </picture>
        </div>

        {{#if this.imageJ}}
        <picture>
            <source type="image/webp" srcset={{this.imageW}} />
            <img class="case-card__image lazy" src={{this.imageJ}} alt="image">
        </picture>
        {{/if}}
    </div>

    <div class="case-card__info">
        <p class="case-card__name">
            {{this.name}}
        </p>

        <p class="case-card__text">
            {{this.text}}
        </p>
    </div>
</a>
{{else}}
<a href="" class="{{#if caseClass}}{{caseClass}}{{/if}} case-card case-card--simple" {{#if
    dataId}}data-id={{dataId}}{{/if}}>
    <div class="case-card__desc">
