{{#extend "primary"}}
{{#content "main"}}

<section class="section hero-section" data-midnight="light" id="first-section-abchor">
    <div class="hero-section__inner-wrapper">
        <div class="hero-section__site-container">
            <h1 class="section__title visually-hidden">
                Техническая поддержка и развитие
            </h1>

            <div class="hero-section__body">
                <div class="hero-section__heading">
                    <div class="hero-section__title home__title home__title--row home__title--start">
                        Техническая поддержка
                        <span class="home__small-mobile-word">сайтов</span>
                        <div class="home__desktop-word-wrapper">
                            <div class="home__desktop-word">и (</div>
                            <ul class="home__words-list home__words-slogan">
                                <li>Ускоряем сайт,</li>
                                <li>внедряем новый</li>
                                <li>функционал</li>
                                <li>и берем весь</li>
                                <li>технический стек</li>
                                <li>на себя!</li>
                            </ul>
                            <div class="home__desktop-word">)</div>
                            <span class="home__mobile-word home__mobile-word--padding-top">и</span>
                            <div class="home__tablet-word">развитие</div>
                        </div>

                    </div>
                </div>

                {{#if heroList}}
                <ul class="hero-section__list">
                    {{#each heroList}}
                    <li class="hero-section__item hero-item">
                        <div class="hero-item__icon">
                            <svg aria-hidden="true" class="icon">
                                <use xlink:href="#{{this.icon}}"></use>
                            </svg>
                        </div>

                        <div class="hero-item__column">
                            <h6>
                                {{this.desc}}
                            </h6>
                            <p>
                                {{this.text}}
                            </p>
                        </div>
                    </li>
                    {{/each}}
                </ul>
                {{/if}}

                <a href="#callback-modal" class="hero-section__link button button--white">
                    Оставить заявку
                </a>
            </div>
        </div>
    </div>
</section>

<section class="table-section section {{table.class}}">
    <div class="table-section__site-container">
        <h2 class="table-section__title">
            {{table.title}}
        </h2>

        <div class="table-section__body">
            <div class="table-section__header table-section__row">
                <p class="table-section__big">
                    <span class="table-section__label">
                        {{table.header.[0]}}
                    </span>
                </p>
                <p class="table-section__small">
                    <span class="table-section__label">
                        {{table.header.[1]}}
                    </span>
                </p>
                <p class="table-section__small">
                    <span class="table-section__label">
                        {{table.header.[2]}}
                    </span>
                </p>
            </div>

            <ul class="table-section__list">
                {{#each table.list}}
                <li class="table-section__item table-section__row js-table-triger">
                    <div class="table-section__big">
                        <div class="table-section__name">
                            {{this.one}}
                        </div>
                    </div>
                    <div class="table-section__small">
                        <span class="table-section__label table-section__label--mobile">
                            {{../table.header.[1]}}
                        </span>
                        <div class="table-section__value">
                            {{this.two}}
                        </div>
                    </div>
                    <div class="table-section__small">
                        <span class="table-section__label table-section__label--mobile">
                            {{../table.header.[2]}}
                        </span>
                        <div class="table-section__value">
                            {{this.three}}
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>

<section class="table-section section table-section--sage" data-midnight="light">
    <div class="table-section__site-container">
        <h2 class="table-section__title">
            Что входит в тех. поддержку?
        </h2>

        <div class="table-section__body">
            <div class="table-section__header table-section__row">
                <p class="table-section__big">
                    <span class="table-section__label">
                        (Мы можем)
                    </span>
                </p>
                <p class="table-section__small">
                    <span class="table-section__label">
                        (Столько всего)
                    </span>
                </p>
                <p class="table-section__small">
                    <span class="table-section__label table-section__label--hidden">
                        (Столько всего)
                    </span>
                </p>
            </div>

            <ul class="table-section__list table-section__list--bigger-gap">
                {{#each tableList}}
                <li class="table-section__item table-section__row">
                    <div class="table-section__big">
                        <div class="table-section__name">
                            {{{this.one}}}
                        </div>
                    </div>
                    <div class="table-section__small">
                        <span class="table-section__label table-section__label--mobile">
                            (Столько всего)
                        </span>
                        <div class="table-section__value table-section__value--column">
                            {{#each this.two}}
                            <p>
                                {{this}}
                            </p>
                            {{/each}}
                        </div>
                    </div>
                    <div class="table-section__small">
                        <span class="table-section__label table-section__label--mobile table-section__label--hidden">
                            (Столько всего)
                        </span>
                        <div class="table-section__value table-section__value--column">
                            {{#each this.three}}
                            <p>
                                {{this}}
                            </p>
                            {{/each}}
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>

            <div class="table-section__footer">
                <div class="table-section__nameplate nameplate">
                    Мы за индивидуальный подход!
                </div>
                <h6 class="table-section__big table-section__name">
                    Любые дополнительные работы по запросу :)
                </h6>
            </div>
        </div>
    </div>
</section>

